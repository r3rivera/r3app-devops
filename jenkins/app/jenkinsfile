pipeline {
    agent any

    stages {
        stage('Build') {
            steps{
                echo 'Building R3APP'
                echo "CURRENT WORKSPACE ::: ${WORKSPACE}"
                sh "whoami"
            }
        }
        stage('DEV Deploy') {
            steps{
                echo 'Testing DEV R3APP'
                sh "chmod +x ./deploy/deploy-app.sh"
                sh "./deploy/deploy-app.sh DEV"

            }
        }
        stage('TEST Deploy') {
            steps{
                echo 'Testing TEST R3APP'
            }
        }
        stage('ACPT Deploy') {
            steps{
                echo 'Deploying ACPT R3APP'
            }
        }
        
    }
}